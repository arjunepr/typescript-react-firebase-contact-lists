@require '../../node_modules/reset-css/reset.css';

*
  box-sizing border-box
  overflow visible

body
  // background #4450FF
  /* Permalink - use to edit and share this gradient: http://colorzilla.com/gradient-editor/#1e5799+0,2989d8+50,207cca+51,7db9e8+100;Blue+Gloss+Default */
  // background: #1e5799; /* Old browsers */
  // background: linear-gradient(45deg,  #1e5799 0%,#2989d8 50%,#7db9e8 100%); /* W3C, IE10+, FF16+, Chrome26+, Opera12+, Safari7+ */
  // filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#1e5799', endColorstr='#7db9e8',GradientType=1 ); /* IE6-9 fallback on horizontal gradient */
  background-color #99f
  background-image linear-gradient(to bottom right, rgba(#99f,1) 0%, rgba(#66f,1) 100%)
  min-height 70vh
  background-repeat: no-repeat
  

html, body
  font-family Frutiger, "Frutiger Linotype", Univers, Calibri, "Gill Sans", "Gill Sans MT", "Myriad Pro", Myriad, "DejaVu Sans Condensed", "Liberation Sans", "Nimbus Sans L", Tahoma, Geneva, "Helvetica Neue", Helvetica, Arial, sans-serif
  font-size 16px
  line-height 1.5


a
  text-decoration none




// This is the header region.

.pure-header

  ul
    display flex
    padding-bottom: 2px
    background-color rgba(#000, 0.8)
    box-shadow: 0px 1px 8px 1px rgba(0,0,0,0.75);
    position relative

    &:before
      position absolute


   

  li
    flex 1 1 50%
    // padding 2rem
    display flex
    font-size 1.5rem
    transition all 0.2s ease-in
    &:first-child
      border-right 1px solid white

    &:nth-child(2)
      border-left 1px solid white
    
    &:hover
      background-color #ddd
      color #111

    a
      color white
      padding 2rem
      flex 1 1 100%
      display block
      transition all 0.2s ease-in
      &:hover
        color #111




// This makes the site-navigation / header extend to full with, without padding and without margin.
nav.pure-header
  padding 0
  margin 0
  width 100%

.content
  width 80%
  margin 0 auto
  padding 1rem
  text-align center


// This is the whole contact-list component 

.contactList
  margin-top 5rem
  background-color #efefef
  width 90%
  margin 0 auto




// The AddContact component

.add-contact
  display flex
  margin-bottom 1rem




// A form group. In the add-contact, this is a label + an input field

.form-group
  display flex
  flex-direction column
  flex 1 1 auto
  min-height 1rem

  > *
    max-width 22vw


// Now for each contact item.
.contact-item
  display flex
  align-items center
  
  
  > *
    flex 1 1 10%
    // min-height 100%
    min-height 70px
    max-width 20vw
    text-align center

    &:first-child
      margin-left auto

    &:last-child
      margin-right auto

.confirmationText
  text-align center
  width 100%
  // padding 1rem



// Input element of each SAVED record.
.input-saved
  padding 0.8rem
  font-size 1.5rem
  background-color #595853
  color #fff
  border-radius 2.5px
  margin-right 1px
  border 2px ridge #000
  // max-height 5.7rem

  &:last-child
    border-right none

  &[disabled]
    background-color #333




// Prettified buttons below. Going to make them look better later on.


.btn
  border-raidus 7px
  color #fff
  font-size 1.5rem
  padding 0.5rem
  text-decoration none
  width 100%

  &:hover
    text-decoration none

.btn-blue
  background: #3463d9;
  background-image: linear-gradient(to bottom, #3463d9, #2980b9);

  &:hover
    background: #3cb0fd;
    background-image background-image: linear-gradient(#3cb0fd, #3498db)


.btn-red
  background: #d9346b;
  background-image: linear-gradient(to bottom, #d9346b, #b82b6f);

  &:hover
    background: #fc3c56;
    background-image: linear-gradient(to bottom, #fc3c56, #d9346b);


@media all and (max-width 950px)
  html, body
    font-size 12px

  .input-saved
    font-size 1.25rem

