html, body
  font-family Frutiger, "Frutiger Linotype", Univers, Calibri, "Gill Sans", "Gill Sans MT", "Myriad Pro", Myriad, "DejaVu Sans Condensed", "Liberation Sans", "Nimbus Sans L", Tahoma, Geneva, "Helvetica Neue", Helvetica, Arial, sans-serif
  font-size 16px
  line-height 1.5


a
  text-decoration none


.app-main
  


.pure-header

  ul
    display flex
    padding-bottom: 2px
    background-color rgba(#000, 0.8)
    box-shadow: 0px 1px 8px 1px rgba(0,0,0,0.75);
    position relative

    &:before
      position absolute


   

  li
    flex 1 1 50%
    // padding 2rem
    display flex
    font-size 1.5rem
    transition all 0.2s ease-in
    &:first-child
      border-right 1px solid white

    &:nth-child(2)
      border-left 1px solid white
    
    &:hover
      background-color #ddd
      color #111

    a
      color white
      padding 2rem
      flex 1 1 100%
      display block
      transition all 0.2s ease-in
      &:hover
        color #111



nav.pure-header
  padding 0
  margin 0
  width 100%

.content
  width 80%
  margin 0 auto
  padding 1rem
  text-align center



.contactList
  margin-top 5rem
  background-color #efefef
  width 90%
  margin 0 auto

.form-group
  display flex
  flex-direction column
  flex 1 1 auto
  min-height 1rem

.add-contact
  display flex
  margin-bottom 1rem

// Now for each contact item.
.contact-item
  display flex
  align-items center

  span
    display flex
    flex-wrap wrap

    > *
      flex 1 1 50%
      min-height 100%
  
  > *
    flex 1 1
    min-height 10vh
    text-align center

.confirmationText
  text-align center
  width 100%
  // padding 1rem





border-rightify(right-color, right-size)
  border none
  border-right right-size solid right-color



.input-saved
  font-size 1.5rem
  background-color #eee
  // border-rightify(#000, 1px)
  border 5px solid #99f

  &:last-child
    border-right none

  &[disabled]
    background-color #000
    color #fff
    border-rightify(#fff, 1px)



.btn {
  background: #3463d9;
  background-image: -webkit-linear-gradient(top, #3463d9, #2980b9);
  background-image: -moz-linear-gradient(top, #3463d9, #2980b9);
  background-image: -ms-linear-gradient(top, #3463d9, #2980b9);
  background-image: -o-linear-gradient(top, #3463d9, #2980b9);
  background-image: linear-gradient(to bottom, #3463d9, #2980b9);
  -webkit-border-radius: 7;
  -moz-border-radius: 7;
  border-radius: 7px;
  font-family: Arial;
  color: #ffffff;
  font-size: 20px;
  padding: 10px 20px 10px 20px;
  text-decoration: none;
}

.btn:hover {
  background: #3cb0fd;
  background-image: -webkit-linear-gradient(top, #3cb0fd, #3498db);
  background-image: -moz-linear-gradient(top, #3cb0fd, #3498db);
  background-image: -ms-linear-gradient(top, #3cb0fd, #3498db);
  background-image: -o-linear-gradient(top, #3cb0fd, #3498db);
  background-image: linear-gradient(to bottom, #3cb0fd, #3498db);
  text-decoration: none;
}